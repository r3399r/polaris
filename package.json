{
  "name": "polaris",
  "version": "1.1.0",
  "author": "Yue Chang",
  "scripts": {
    "lint:es": "eslint src",
    "fix:es": "npm run lint:es -- --fix",
    "lint:format": "prettier --config ./prettierrc.json --list-different \"./**/*.ts\" --ignore-path .gitignore",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-p lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli dist lib -f",
    "test": "jest -c jest.config.js",
    "test:coverage": "npm run test -- --coverage --verbose",
    "build:layer": "npm install --production && mkdir -p dist/nodejs && cp -R node_modules dist/nodejs",
    "build:lambda": "npm install && tspc",
    "pre:commit": "run-s lint test:coverage build",
    "pre:dev": "run-s fix test:coverage",
    "pre:deploy": "run-s clean build:*"
  },
  "license": "ISC",
  "dependencies": {
    "google-auth-library": "^9.14.1",
    "google-spreadsheet": "^4.1.4",
    "inversify": "^6.0.2",
    "mysql2": "^3.14.1",
    "pg": "^8.16.2",
    "pg-native": "^3.5.1",
    "reflect-metadata": "^0.2.2",
    "tslib": "^2.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "del-cli": "^6.0.0",
    "eslint": "^9.29.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.3",
    "typescript-transform-paths": "^3.5.5"
  }
}
